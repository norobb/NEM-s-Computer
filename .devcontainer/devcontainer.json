{
  "name": "Elementary OS with noVNC",
  "dockerFile": "../Dockerfile",
  "context": "..",
  
  "runArgs": [
    "--privileged",
    "--shm-size=2",
    "--cap-add=SYS_PTRACE",
    "--security-opt=seccomp=unconfined"
  ],
  
  "forwardPorts": [
    6080
  ],
  
  "portsAttributes": {
    "6080": {
      "label": "noVNC Desktop",
      "protocol": "http",
      "onAutoForward": "openBrowserOnce"
    }
  },
  
  "extensions": [
    "ms-vscode.cpptools",
    "ms-python.python",
    "ms-vscode.vscode-json",
    "redhat.vscode-yaml"
  ],
  
  "containerEnv": {
    "DISPLAY": ":1",
    "VNC_RESOLUTION": "1920x1080",
    "VNC_PASSWORD": "codespace"
  },
  
  "features": {
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers/features/docker-in-docker:2": {}
  },
  
  "postCreateCommand": "bash /usr/local/bin/setup-desktop.sh",
  "postStartCommand": "bash /usr/local/bin/start-desktop.sh",
  
  "remoteUser": "vscode",
  "workspaceFolder": "/workspace",
  
  "mounts": [
    "source=/tmp/.X11-unix,target=/tmp/.X11-unix,type=bind",
    "source=/dev/shm,target=/dev/shm,type=bind"
  ],
  
  "overrideCommand": false,
  "initializeCommand": "echo 'Preparing Elementary OS Codespace...'",
  "onCreateCommand": "echo 'Container created successfully'",
  "shutdownAction": "stopContainer",
  "updateContentCommand": "apt-get update && apt-get upgrade -y"
}
